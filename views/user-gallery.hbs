<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<section id="info"
         class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100">
  {{#with user}}
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{{name}}</h5>
    <p class="font-normal text-gray-700">{{email}}</p>
  {{/with}}
</section>

<section id="gallery">
  <div class="container mx-auto px-5 py-2 lg:px-32 lg:pt-12">
    <div class="-m-1 flex flex-wrap md:-m-2">
      {{#each gallery}}
        <div class="flex w-1/3 flex-wrap">
          <div class="w-full p-1 md:p-2">
            <img
              class="block h-full w-full rounded-lg object-cover object-center"
              src="/upload{{this.photoPath}}" />
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
</body>
</html>
